include ../includes/header.pug
.nk-app-root
  // main @s
  .nk-main
    // sidebar @s
    include ../includes/sidepanel.pug
    // sidebar @e
    // wrap @s
    .nk-wrap
      // main header @s
      include ../includes/navbar.pug
      // main header @e
      // content @s
      .nk-content
        .container-fluid
          .nk-content-inner
            .nk-content-body
              .nk-block-head.nk-block-head-sm
                .nk-block-between
                  .nk-block-head-content
                    h3.nk-block-title.page-title Movies to Download
                    .nk-block-des.text-soft
                      p You have total #{allWatchlists.length} items.
                  // .nk-block-head-content
                  .nk-block-head-content
                    .toggle-wrap.nk-block-tools-toggle
                      a.btn.btn-icon.btn-trigger.toggle-expand.me-n1(href='#' data-target='pageMenu')
                        em.icon.ni.ni-menu-alt-r
                      .toggle-expand-content(data-content='pageMenu')
                        ul.nk-block-tools.g-3
                          li.nk-block-tools-opt
                            .drodown
                              a.dropdown-toggle.btn.btn-icon.btn-primary(href='#' data-bs-toggle='dropdown')
                                em.icon.ni.ni-plus
                              .dropdown-menu.dropdown-menu-end
                                ul.link-list-opt.no-bdr
                                  li
                                    a(href='#' data-bs-toggle='modal' data-bs-target='#modalForm')
                                      span Add Media
                    // .toggle-wrap
                  // .nk-block-head-content
                // .nk-block-between
              // .nk-block-head
              .nk-block.nk-block-lg
                  .card.card-bordered.card-preview
                    .card-inner
                      table.datatable-init.nowrap.table
                        thead
                          tr
                            th Title
                            th Comment
                            th Language
                            th Priority
                            th Release date
                            th Url
                            th More
                        tbody
                          each watchlist in allWatchlists
                            tr.nk-tb-item
                              td=watchlist.movie[0].title+" ("+watchlist.movie[0].original_title+")"
                              td=watchlist.comment
                              td=watchlist.movie[0].original_language
                              td=watchlist.priority
                              td=watchlist.movie[0].release_date
                              td=watchlist.url
                              td.nk-tb-col.nk-tb-col-tools
                                ul.nk-tb-actions.gx-1
                                  li.nk-tb-action-hidden
                                    a.btn.btn-trigger.btn-icon(href='#' data-bs-toggle='tooltip' data-bs-placement='top' title='Edit')
                                      em.icon.ni.ni-wallet-fill
                                  li.nk-tb-action-hidden
                                    a.btn.btn-trigger.btn-icon(href='#' data-bs-toggle='tooltip' data-bs-placement='top' title='Change to Completed')
                                      em.icon.ni.ni-mail-fill
                                  li
                                    .drodown
                                      a.dropdown-toggle.btn.btn-icon.btn-trigger(href='#' data-bs-toggle='dropdown')
                                        em.icon.ni.ni-more-h
                                      .dropdown-menu.dropdown-menu-end
                                        ul.link-list-opt.no-bdr
                                          li
                                            a(href='#')
                                              em.icon.ni.ni-eye
                                              span View Movie
                  // .card-preview
              // nk-block
      // content @e
      // footer @s
      include ../includes/footer.pug
      // footer @e
    // wrap @e
  // main @e
// app-root @e
// select region modal
#region.modal.fade(tabindex='-1' role='dialog')
  .modal-dialog.modal-lg(role='document')
    .modal-content
      a.close(href='#' data-bs-dismiss='modal')
        em.icon.ni.ni-cross-sm
      .modal-body.modal-body-md
        h5.title.mb-4 Select Your Country
        .nk-country-region
          ul.country-list.text-center.gy-2
            li
              a.country-item(href='#')
                img.country-flag(src='./images/flags/arg.png' alt='')
                span.country-name Argentina
            li
              a.country-item(href='#')
                img.country-flag(src='./images/flags/aus.png' alt='')
                span.country-name Australia
            li
              a.country-item(href='#')
                img.country-flag(src='./images/flags/english.png' alt='')
                span.country-name United State
    // .modal-content
  // .modla-dialog
include ../forms/addMedia.pug
