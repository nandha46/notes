<div class="container-fluid">
    <div class="nk-content-inner">
        <div class="nk-content-body">
            <div class="nk-block-head nk-block-head-sm">
                <div class="nk-block-between g-3">
                    <div class="nk-block-head-content">
                        <h3 class="nk-block-title page-title">Movie Gallery</h3>
                        <div class="nk-block-des text-soft">
                            <p>You have total <span class="text-base"><%= allFilms.length %></span> Movies.</p>
                        </div>
                    </div>
                </div>
            </div><!-- .nk-block-head -->
            <div class="nk-block">
                <div class="row g-gs">
                    <% for (film of allFilms) { %>
                    <div class="col-sm-6 col-lg-4 col-xxl-1 custom-card">
                        <div class="gallery card card-bordered">
                            <a class="gallery-image popup-image" href="./tmdb/movie_posters<%= film.poster_path %>">
                                <img class="w-100 rounded-top" src="./tmdb/movie_posters<%= film.poster_path %>" alt="">
                            </a>
                            <div class="image-overlay">
                                    <em class="overlay icon ni ni-heart"></em>
                                    <em class="overlay icon ni ni-eye"></em>
                                    <em class="overlay icon ni ni-expand"></em>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div><!-- .nk-block -->
        </div>
    </div>
</div>