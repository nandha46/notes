<%- include('../includes/header') %>
<body class="nk-body bg-lighter npc-general has-sidebar ">
    <div class="nk-app-root">
        <!-- main @s -->
        <div class="nk-main ">
            <%- include('../includes/sidepanel') %>
            <!-- wrap @s -->
            <div class="nk-wrap ">
                <%- include('../includes/navbar') %>
                <!-- content @s -->
                <div class="nk-content ">
                    <div class="container-fluid">
                        <div class="nk-content-inner">
                            <div class="nk-content-body">
                                <div class="nk-block-head nk-block-head-sm">
                                    <div class="nk-block-between g-3">
                                        <div class="nk-block-head-content">
                                            <h3 class="nk-block-title page-title">TV Show Gallery</h3>
                                            <div class="nk-block-des text-soft">
                                                <p>You have total <span class="text-base"><%= allShows.length %></span> tv shows.</p>
                                            </div>
                                        </div>
                                    </div>
                                </div><!-- .nk-block-head -->
                                <div class="nk-block">
                                    <div class="row g-gs">
                                        <% for (tvshow of allShows) { %>
                                        <div class="col-sm-6 col-lg-4 col-xxl-3">
                                            <div class="gallery card card-bordered">
                                                <a class="gallery-image popup-image" href="./tmdb/movie_posters<%= tvshow.poster_path %>">
                                                    <img class="w-100 rounded-top" src="./tmdb/movie_posters<%= tvshow.poster_path %>" alt="">
                                                </a>
                                                <div class="gallery-body card-inner align-center justify-between flex-wrap g-2">
                                                    <div class="user-card">
                                                        <div class="user-info">
                                                            <span class="lead-text"><%= tvshow.name %></span>
                                                            <span class="sub-text"><%= tvshow.original_language %></span>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <button class="btn btn-p-0 btn-nofocus"><em class="icon ni ni-heart"></em><span><%= tvshow.vote_average %></span></button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                    </div>
                                </div><!-- .nk-block -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content @e -->
                <%- include('../includes/footer') %>
            </div>
            <!-- wrap @e -->
        </div>
        <!-- main @e -->
    </div>
    <!-- app-root @e -->
    <%- include('../includes/region-modal') %>
    <!-- JavaScript -->
    <script src="./assets/js/bundle.js?ver=3.0.3"></script>
    <script src="./assets/js/scripts.js?ver=3.0.3"></script>
    <script src="./assets/js/charts/gd-analytics.js?ver=3.0.3"></script>
    <script src="./assets/js/libs/jqvmap.js?ver=3.0.3"></script>
</body>

</html>